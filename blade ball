local VirtualInputManager = game:GetService("VirtualInputManager")
local RunService = game:GetService("RunService")
local Players = game:GetService("Players")
local TweenService = game:GetService("TweenService")
local CoreGui = game:GetService("CoreGui")
local StarterGui = game:GetService("StarterGui")

-- Configura√ß√µes
local DETECTION_DISTANCE = 40 -- Dist√¢ncia para considerar a bola "perto"
local BALL_SPEED_THRESHOLD = 5 -- Velocidade m√≠nima para considerar que a bola est√° vindo na sua dire√ß√£o
local CLICK_X = 960 -- Coordenada X central (ajuste conforme a resolu√ß√£o da tela)
local CLICK_Y = 540 -- Coordenada Y central (ajuste conforme a resolu√ß√£o da tela)
local COOLDOWN = 0.5 -- Intervalo entre cliques (em segundos)
local DEBUG_ENABLED = true -- Para prints de depura√ß√£o

-- Fun√ß√£o de depura√ß√£o
local function debugPrint(...)
    if DEBUG_ENABLED then
        print(...)
    end
end

-- Vari√°veis
local lp = Players.LocalPlayer
local character = lp.Character or lp.CharacterAdded:Wait()
local HumanoidRootPart = character:WaitForChild("HumanoidRootPart")
local Ball = nil
local lastClickTime = 0 -- Para controlar o cooldown

-- Fun√ß√£o que cria a tela de loading e retorna uma promise
local function createLoadingScreen()
    local promise = {}
    promise.completed = false
    promise.connection = nil
    
    pcall(function()
        if CoreGui:FindFirstChild("LoadingScreen") then
            CoreGui.LoadingScreen:Destroy()
        end
    end)

    local gui = Instance.new("ScreenGui")
    gui.Name = "LoadingScreen"
    gui.IgnoreGuiInset = true
    gui.ResetOnSpawn = false
    gui.Parent = CoreGui
    pcall(function() syn.protect_gui(gui) end)

    local frame = Instance.new("Frame")
    frame.BackgroundColor3 = Color3.new(0, 0, 0)
    frame.BackgroundTransparency = 0.3
    frame.Size = UDim2.new(1, 0, 1, 0)
    frame.Parent = gui

    local image = Instance.new("ImageLabel")
    image.Size = UDim2.new(0, 300, 0, 300)
    image.Position = UDim2.new(0.5, -150, 0.35, -150)
    image.BackgroundTransparency = 1
    image.Image = "rbxassetid://75732220851513"
    image.Parent = frame

    local nameText = Instance.new("TextLabel")
    nameText.Size = UDim2.new(1, 0, 0, 40)
    nameText.Position = UDim2.new(0, 0, 0.65, 0)
    nameText.TextColor3 = Color3.fromRGB(255, 255, 255)
    nameText.TextStrokeTransparency = 0.3
    nameText.BackgroundTransparency = 1
    nameText.Font = Enum.Font.FredokaOne
    nameText.TextScaled = true
    nameText.Text = "Verificando usu√°rio: "..lp.Name.." (Conta: "..tostring(lp.AccountAge).." dias)"
    nameText.Parent = frame

    local barBG = Instance.new("Frame")
    barBG.Size = UDim2.new(0.6, 0, 0.03, 0)
    barBG.Position = UDim2.new(0.2, 0, 0.8, 0)
    barBG.BackgroundColor3 = Color3.new(1, 1, 1)
    barBG.BorderSizePixel = 0
    barBG.Parent = frame

    local bar = Instance.new("Frame")
    bar.Size = UDim2.new(0, 0, 1, 0)
    bar.BackgroundColor3 = Color3.new(0.7, 0.2, 0.6)
    bar.BorderSizePixel = 0
    bar.Parent = barBG

    local tween = TweenService:Create(
        bar,
        TweenInfo.new(4, Enum.EasingStyle.Quad, Enum.EasingDirection.Out),
        {Size = UDim2.new(1, 0, 1, 0)}
    )
    tween:Play()

    local function cleanup()
        if gui then
            gui:Destroy()
        end
        if promise.connection then
            promise.connection:Disconnect()
        end
    end

    promise.connection = tween.Completed:Connect(function()
        TweenService:Create(frame, TweenInfo.new(1, Enum.EasingStyle.Quad, Enum.EasingDirection.Out), {BackgroundTransparency = 1}):Play()
        TweenService:Create(barBG, TweenInfo.new(1, Enum.EasingStyle.Quad, Enum.EasingDirection.Out), {BackgroundTransparency = 1}):Play()
        TweenService:Create(bar, TweenInfo.new(1, Enum.EasingStyle.Quad, Enum.EasingDirection.Out), {BackgroundTransparency = 1}):Play()
        TweenService:Create(image, TweenInfo.new(1, Enum.EasingStyle.Quad, Enum.EasingDirection.Out), {ImageTransparency = 1}):Play()
        TweenService:Create(nameText, TweenInfo.new(1, Enum.EasingStyle.Quad, Enum.EasingDirection.Out), {TextTransparency = 1}):Play()
        
        task.delay(1.2, function()
            local sound = Instance.new("Sound")
            sound.SoundId = "rbxassetid://8486683243"
            sound.Volume = 0.5
            sound.PlayOnRemove = true
            sound.Parent = workspace
            sound:Destroy()
            
            StarterGui:SetCore("SendNotification", {
                Title = "Coquette Hub",
                Text = "Bem-vindo √† Coquette Hub üíñ",
                Duration = 4
            })
            
            promise.completed = true
            cleanup()
        end)
    end)
    
    return promise
end

local function waitForPromise(promise)
    while not promise.completed do
        task.wait()
    end
end

local loadingPromise = createLoadingScreen()
waitForPromise(loadingPromise)

debugPrint("Loading completo! Agora executando o resto do script...")

-- Cria a interface gr√°fica com o toggle
local redzlib = loadstring(game:HttpGet("https://raw.githubusercontent.com/tbao143/Library-ui/refs/heads/main/Redzhubui"))()

local Window = redzlib:MakeWindow({
    Title = "Coquette Hub 3.6",
    SubTitle = "by Lolytadev üíñ",
    SaveFolder = "teste"
})

Window:AddMinimizeButton({
    Button = { Image = "rbxassetid://135441295532401", BackgroundTransparency = 0 },
    Corner = { CornerRadius = UDim.new(35, 1) },
})

local Tab1 = Window:MakeTab({"Blade Ball", "swords"})

-- Toggle
local ToggleEnabled = false

local Toggle = Tab1:AddToggle({
    Name = "Auto-Parry",
    Description = "Ativa o auto-parry para Blade Ball",
    Default = false
})

Toggle:Callback(function(Value)
    ToggleEnabled = Value
    if ToggleEnabled then
        debugPrint("Auto-Parry ativado! Monitorando a bola...")
        FindBall()
    else
        debugPrint("Auto-Parry desativado!")
    end
end)

-- Fun√ß√£o para encontrar a bola dinamicamente
local function FindBall()
    -- Tenta encontrar a bola pelo caminho espec√≠fico
    local ballPath = workspace:FindFirstChild("Map") and workspace.Map:FindFirstChild("Grassy_Classic") and workspace.Map.Grassy_Classic:FindFirstChild("Border") and workspace.Map.Grassy_Classic.Border:FindFirstChild("BallFloor")
    if ballPath then
        Ball = ballPath
        debugPrint("Bola encontrada (caminho espec√≠fico):", Ball:GetFullName())
        return true
    else
        debugPrint("Bola n√£o encontrada no caminho espec√≠fico. Buscando de forma gen√©rica...")
        -- Busca gen√©rica por objetos com "ball" ou "sphere" no nome
        for _, obj in pairs(workspace:GetDescendants()) do
            if (obj.Name:lower():find("ball") or obj.Name:lower():find("sphere")) and obj:IsA("BasePart") then
                Ball = obj
                debugPrint("Bola encontrada (m√©todo gen√©rico):", Ball:GetFullName())
                return true
            end
        end
        Ball = nil
        debugPrint("Bola n√£o encontrada.")
        return false
    end
end

-- Atualiza o personagem quando o jogador renasce
lp.CharacterAdded:Connect(function(newCharacter)
    character = newCharacter
    HumanoidRootPart = newCharacter:WaitForChild("HumanoidRootPart")
    debugPrint("Personagem atualizado!")
end)

-- Fun√ß√£o para simular um clique na tela
local function simulateClick()
    -- Verifica o cooldown
    local currentTime = tick()
    if currentTime - lastClickTime < COOLDOWN then
        debugPrint("Cooldown ativo, esperando...")
        return
    end

    VirtualInputManager:SendMouseButtonEvent(CLICK_X, CLICK_Y, 0, true, game, 0) -- Pressiona o bot√£o esquerdo
    wait()
    VirtualInputManager:SendMouseButtonEvent(CLICK_X, CLICK_Y, 0, false, game, 0) -- Solta o bot√£o esquerdo
    debugPrint("Clique simulado na tela em (" .. CLICK_X .. ", " .. CLICK_Y .. ")!")
    lastClickTime = tick() -- Atualiza o tempo do √∫ltimo clique
end

-- Verifica se a bola est√° perto e vindo na sua dire√ß√£o
local function IsBallCloseAndComing()
    if not Ball or not Ball.Parent or not HumanoidRootPart then return false end
    local distance = (Ball.Position - HumanoidRootPart.Position).Magnitude
    debugPrint("Dist√¢ncia da bola at√© o jogador:", distance)

    -- Verifica a velocidade da bola para determinar se est√° vindo na sua dire√ß√£o
    local ballVelocity = Ball.Velocity or (Ball:FindFirstChild("BodyVelocity") and Ball.BodyVelocity.MaxForce or Vector3.new(0, 0, 0))
    local directionToPlayer = (HumanoidRootPart.Position - Ball.Position).Unit
    local speedTowardsPlayer = ballVelocity:Dot(directionToPlayer)
    debugPrint("Velocidade da bola na dire√ß√£o do jogador:", speedTowardsPlayer)

    return distance <= DETECTION_DISTANCE and speedTowardsPlayer > BALL_SPEED_THRESHOLD
end

-- Loop para tentar encontrar a bola continuamente
RunService.Heartbeat:Connect(function()
    if ToggleEnabled and (not Ball or not Ball.Parent) then
        FindBall()
    end
end)

-- Loop principal para o auto-parry
RunService.Heartbeat:Connect(function()
    if not ToggleEnabled then return end
    if not Ball or not Ball.Parent or not HumanoidRootPart then return end

    if IsBallCloseAndComing() then
        debugPrint("Bola detectada como pr√≥xima e vindo na sua dire√ß√£o! Batendo...")
        simulateClick()
    end
end)
