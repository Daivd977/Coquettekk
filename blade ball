local Players = game:GetService("Players")
local RunService = game:GetService("RunService")

local lp = Players.LocalPlayer

-- Configura√ß√µes
getgenv().SpamEnabled = false  -- Toggle para ativar/desativar o spam
getgenv().DEBUG_ENABLED = true  -- Para prints de depura√ß√£o
getgenv().SPAM_INTERVAL = 0.5  -- Intervalo entre disparos do evento (em segundos)

-- Fun√ß√£o de depura√ß√£o
local function debugPrint(...)
    if getgenv().DEBUG_ENABLED then
        print(...)
    end
end

-- Vari√°veis
local LastSpamTime = 0  -- Para controlar o cooldown
local character = lp.Character or lp.CharacterAdded:Wait()
local HumanoidRootPart = character:WaitForChild("HumanoidRootPart")

-- Atualiza o personagem quando o jogador renasce
lp.CharacterAdded:Connect(function(newCharacter)
    character = newCharacter
    HumanoidRootPart = newCharacter:WaitForChild("HumanoidRootPart")
    debugPrint("Personagem atualizado!")
end)

-- Fun√ß√£o para disparar o evento remoto de bater na bola
local function HitBall()
    -- Verifica o cooldown
    local currentTime = tick()
    if currentTime - LastSpamTime < getgenv().SPAM_INTERVAL then
        debugPrint("Cooldown ativo, esperando...")
        return
    end

    -- Monta os argumentos para o evento remoto
    local args = {
        [2] = "Ep1adq", -- Identificador da a√ß√£o
        [3] = HumanoidRootPart.CFrame, -- Posi√ß√£o/orienta√ß√£o do jogador
        [4] = HumanoidRootPart.CFrame, -- Usamos a mesma posi√ß√£o do jogador
        [5] = false -- Booleano (mantido como false, como no exemplo)
    }

    -- Dispara o evento remoto
    pcall(function()
        game:GetService("CookiesService"):WaitForChild("\n"):FireServer(unpack(args))
        debugPrint("Evento remoto disparado para bater na bola!")
        LastSpamTime = tick() -- Atualiza o tempo do √∫ltimo disparo
    end)
end

-- Interface simples com um toggle
local redzlib = loadstring(game:HttpGet("https://raw.githubusercontent.com/tbao143/Library-ui/refs/heads/main/Redzhubui"))()

local Window = redzlib:MakeWindow({
    Title = "Coquette Hub 3.677778888",
    SubTitle = "by Lolytadev üíñ",
    SaveFolder = "teste"
})

Window:AddMinimizeButton({
    Button = { Image = "rbxassetid://135441295532401", BackgroundTransparency = 0 },
    Corner = { CornerRadius = UDim.new(35, 1) },
})

local Tab1 = Window:MakeTab({"Blade Ball", "swords"})

-- Toggle para ativar/desativar o spam
local Toggle = Tab1:AddToggle({
    Name = "Spam Hit",
    Description = "Ativa o spam para bater na bola",
    Default = false
})

Toggle:Callback(function(Value)
    getgenv().SpamEnabled = Value
    if getgenv().SpamEnabled then
        debugPrint("Spam Hit ativado!")
    else
        debugPrint("Spam Hit desativado!")
    end
end)

-- Loop principal para o spam
RunService.Heartbeat:Connect(function()
    if not getgenv().SpamEnabled then return end
    if not HumanoidRootPart then return end

    debugPrint("Tentando bater na bola (spam)...")
    HitBall()
end)
